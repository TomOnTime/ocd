# ~eater/.config/openbox/autostart
# http://eater.org/

xset b off
xset m 2 1.6
setxkbmap -variant altgr-intl us

#gnome-settings-daemon &
#gnome-screensaver &

# Hack to properly setup home monitors.
if [ "`hostname -s`" = "redqueen" ]; then
  xrandr --fb 3120x1920 --output DVI-I-1 --primary --pos 0x340 \
      --rotate normal --auto --output DVI-D-1 --pos 1920x0 --rotate left
fi

feh --no-xinerama --bg-scale $HOME/.background &
