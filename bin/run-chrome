#!/bin/sh

personal() {
  exec google-chrome \
      --user-data-dir=$HOME/.config/google-chrome/Personal
}

work() {
  exec google-chrome \
      --proxy-pac-url=http://wpad.corp.google.com/wpad.dat \
      --user-data-dir=$HOME/.config/google-chrome/Work
}

tor() {
  prodir=`mktemp -d`
  google-chrome \
    --proxy-server="socks://127.0.0.1:9050" \
    --incognito \
    --user-data-dir=$prodir
  rm -rf $prodir
}

case $1 in
  personal)
    personal
    ;;
  work)
    work
    ;;
  tor)
    tor
    ;;
  *)
    personal
    ;;
esac
