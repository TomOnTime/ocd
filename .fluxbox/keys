# ~eater/.fluxbox/keys
# http://eater.org/

OnDesktop Mouse1 :hideMenus
OnDesktop Mouse2 :workspaceMenu
OnDesktop Mouse3 :rootMenu
OnDesktop Mouse4 :nextWorkspace
OnDesktop Mouse5 :prevWorkspace

# eff keys
None F4 :ExecCommand /usr/bin/xscreensaver-command -lock
None F2 :ExecCommand /usr/bin/fbrun
Mod1 F4 :Close

# window movement/sizing ops

Mod1 Left :MoveLeft +10
Mod1 Right :MoveRight +10
Mod1 Down :MoveDown +10
Mod1 Up :MoveUp +10

Shift Mod1 Left :MoveLeft +1
Shift Mod1 Right :MoveRight +1
Shift Mod1 Down :MoveDown +1
Shift Mod1 Up :MoveUp +1

# navigation

Control Right :NextWorkspace
Control Left :PrevWorkspace

Control Down :NextWindow
Mod1 Tab :NextWindow
Control Up :PrevWindow
Mod1 Shift Tab :PrevWindow

Control KP_1 :Workspace 1
Control KP_2 :Workspace 2
Control KP_3 :Workspace 3
Control KP_4 :Workspace 4
Control KP_5 :Workspace 5
Control KP_6 :Workspace 6
Control KP_7 :Workspace 7
Control KP_8 :Workspace 8
Control KP_9 :Workspace 9


# funky

Mod4 d :ToggleDecor
Mod4 l :ExecCommand /usr/bin/xscreensaver-command -lock
Mod4 r :ExecCommand /usr/bin/fbrun
Mod4 w :KillWindow
Mod4 m :Minimize

